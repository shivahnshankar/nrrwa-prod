baseURL = 'https://nrrwa.org/'
languageCode = 'en-us'
title = 'NRRWA'
defaultContentLanguage = 'en'

# Multilingual configuration
[languages]
  [languages.en]
    languageName = 'English'
    weight = 1
    title = 'NRRWA'
    [languages.en.params]
      siteName = 'NRRWA'
      siteDescription = 'Namma Roopanagara Residents Welfare Association'

  [languages.kn]
    languageName = 'ಕನ್ನಡ'
    weight = 2
    title = 'ಎನ್ಆರ್ಆರ್ಡಬ್ಲ್ಯೂಎ'
    [languages.kn.params]
      siteName = 'ಎನ್ಆರ್ಆರ್ಡಬ್ಲ್ಯೂಎ'
      siteDescription = 'ನಮ್ಮ ರೂಪನಗರ ನಿವಾಸಿಗಳ ಕಲ್ಯಾಣ ಸಂಘ'

# Taxonomies (built-in Hugo feature)
[taxonomies]
  tag = 'tags'
  category = 'categories'

# Pagination
[pagination]
  pagerSize = 10

# Params
[params]
  description = 'Namma Roopanagara Residents Welfare Association'
  author = 'NRRWA'
  stats_members = 400
  stats_yearsOfService = 25
  stats_eventsOrganized = 100
  stats_treesPlanted = 500

# Permalinks
[permalinks]
  news = '/:sections/:slug/'
  events = '/:sections/:slug/'

# Menu configuration (can be overridden per language)
[[languages.en.menu.main]]
  name = 'Home'
  url = '/'
  weight = 1

[[languages.en.menu.main]]
